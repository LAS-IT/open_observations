= errors_for @user
= simple_form_for @user, url: (@user.new_record? ? add_users_path : nil), html: { class: 'pure-form pure-form-stacked' } do |f|
  = field_set_tag t("activerecord.models.user") do
    = f.input :first_name
    = f.input :last_name
    = f.input :email, type: :email
    - if @user.new_record?
      = f.input :password, type: :password
      = f.input :password_confirmation, type: :password
    = f.input :role_ids, collection: @available_roles if @available_roles.any?

  = submit_for @user
