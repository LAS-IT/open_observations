- grid do
  - column width: 1, of: 2 do
    %h2.content-subhead= t('modules.actions.programs.show', program: @program)
  - column width: 1, of: 2, class: 'action-button' do
    %p= primary_button t('modules.actions.defaults.edit', resource: 'Program'), edit_program_path(@program), icon: :pencil

%hr

- grid do
  - column width: 1, of: 2 do
    %h3.content-subhead= pluralize @program.departments.count, t('activerecord.models.department')
  - column width: 1, of: 2, class: 'action-button' do
    %p= primary_button t('modules.actions.defaults.new', resource: 'Department'), new_program_department_path(@program), icon: :plus
= table_for @program.departments, columns: [:name, :program, :courses_count]
