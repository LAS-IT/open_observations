    :plain
      <script type="text/javascript" src="//use.typekit.net/wcu1ugh.js"></script>
      <script type="text/javascript">try{Typekit.load();}catch(e){}</script>

  %body.pure-skin-prolearning
    = display_flash
    = yield
    %footer.pure-g
      .pure-u-1-8
        ! &nbsp;
      .pure-u-5-8.las-footer
        %p
          ! &copy; <span id='copyyear'>#{Date.today.year}</span> Leysin American School
        %p= image_tag 'las.png', alt: 'Leysin American School', width: 300 
      .pure-u-1-8
        ! &nbsp;
        
    
